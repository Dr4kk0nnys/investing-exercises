<style>
    nav .wrapper {
        /* font-family: Arial; */
        background: #5e42a6;
        
        float: left;
        margin-right: 25px;
        
        width: 25%;
        max-width: 250px;
        
        height: 100vh;
        min-height: 100%;

        background: #312450;
    }

    .sidebar {
        position: relative;
        margin: 0 15%;
        text-align: right;
        top: 50%;
        transform: translateY(-50%);
    }

    .sidebar ul {
        list-style: none;
    }

    .sidebar ul li {
        position: relative;
        margin: 3.2em 0;

        font-weight: bold;
        font-size: 0.65em;
    }

    .sidebar ul li a {
        line-height: 5em;
        text-transform: uppercase;
        text-decoration: none;
        letter-spacing: 0.4em;
        color: #ffffff75;
        display: block;
        transition: all ease-out 300ms;
    }

    .sidebar ul li a:hover {
        color: white;
    }

    .sidebar ul .active a {
        color: white;
    }

    .sidebar ul li a::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 0.2em;
        background: black;
        left: 0;
        bottom: 0;
        background-image: linear-gradient(to right, #5e42a6, #b74e91)
    }
</style>


